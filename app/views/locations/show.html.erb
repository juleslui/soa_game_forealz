<center>
<body id="createlocation">

<p id="notice"><%= notice %></p>

<h1><%= @location.name %></h1>
<br />
<font face="Janda Elegant Handwriting" size="20">Monster Encountered!</font>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>HP</th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= monster.name %></td>
        <td><%= monster.hp %></td>
        <td><%= link_to 'Fight', fight_path(monster) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<img src="/assets/angry.png" alt="logo" width="300" height="350"><br>

<%= link_to 'Back', locations_path %>
</center>